		<% @posts.each do |post| %>
		  <%url = {:controller=>:blog,:action=>:view,:id=>post.id}%>
		  <div class="post">
			  <div class="posthead">
				  <p class="date">
					  <%= post.updated_at %>
				  </p>
				  <h3><a href="#"><%= link_to post.title, url %></h3>
				  <p class="postmeta">
					  By <%= post.author %>
				  </p>
			  </div>
			  <p>
          <%= post.entry[0,800] %>
			    <%= link_to "more..", url %>
			  </p>
		  </div>
		<% end %>
	</div>
