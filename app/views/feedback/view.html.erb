<div id="maincontent">
	<div id="page">
    <!-- main adress -->
		<div class="post">
		  <div class="posthead">
		    <p class="date"><%= @property.updated_at%></p>
		    <h1><%=@property.address%></h1>
		    <h1><%=@property.postcode.upcase%></h1>
		    <h2>Landlord: <%=@feedback.landlord %> </h2> 
		    <h2>Agency: <%=@feedback.agency %> </h2> 
		    <h2>Date moved out: <%=@feedback.lastdate.to_s %> </h2>
		    <p class="avt"><%= image_tag user_pic(@feedback.user.alias)%></p>
		    <p class="postmeta"><%= @feedback.user.full_name%></p>
		  </div>
		  <div class="rating"><%= star_rating(:rating => @feedback.rating, :readonly=>true) %></div>
		</div>

		<!-- photos upload -->
		<%if @feedback.photos.any? or @own_page%>
		<div class="post">
		  <%@feedback.photos.each do |f| %>
        <%= image_tag f.photo.url(:thumb) %>
      <% end %>
      <% if @own_page %>
        <%=link_to "upload photos", {:anchor=>:upload_form}, {:data_unfolder_id=>:upload_form_container, :class=>:unfolder}%>
		    <a name="upload_form"></a>
        <iframe name="iframe-post-form" id="iframe-post-form" style="display:none;"></iframe>
		    <div class="form2 formstyle hidden" id="upload_form_container">
		      <%= form_for(@photo, :as=>:photo, :url=>{:controller=>:ajax,:action=>:create_feedback_img}, :html=>{:multipart=>true, :id=>:upload_form}) do |p| %>
		      <div class="fieldsets">
	            <%= p.hidden_field(:feedback_id) %>
              <div class="textfield fields">
		            <label>JPG, PNG images, max 2Mb</label>
                <%= p.file_field(:photo) %>
		          </div>  
		          <%= p.submit('Upload') %>
		      </div>    
		    <% end %>
		  </div>
		  <% end %>
		</div>
		<%end%>
		
    <!-- ratings if any -->
    <% if @feedback.entries.any? %>
		<div class="post">
		  <div class="posthead">
		    <h2><%=pluralize(@feedback.entries.count, 'rating')%></h2>
      </div>
      <% @feedback.entries.each do |e| %>
        <blockquote>
          <p><cite>Category: </cite><%=e.entrytype.name %></p>
          <p><%=e.description %></p>
		      <div class="rating"><%= star_rating(:rating => e.rating, :readonly=>true) %></div>
          <small>On <%=e.updated_at%></small>
        </blockquote>
      <% end %>
		</div>
		<% end %>

    <!-- post a rating -->
    <% if @own_page %>
		<div class="post">
		  <a name="post_rating"></a>
		  <div class="posthead">
		    <h2>Add rating</h2>
		  </div>
      <div class="form2 formstyle">
        <%= form_for(@entry, :as => :entry, :url =>{ :controller=>"feedback", :action=>"entry_create" }) do |e| %>
          <%= e.hidden_field(:feedback_id) %>
   		    <%= render "shared/error_list", :item => @entry %>
          <div class="fieldsets">
            <div class="textfield fields">
		          <label>Rating type</label>
              <%= e.select(:entrytype_id,  @entrytypes) %>
            </div>
            <div class="textfield fields">
		          <label>Description</label>
              <%= e.text_area(:description, :rows=>4) %>
            </div>
            <div class="textfield fields">
		          <label>Rate</label>
              <%= star_rating(:name=>:rating)%>
            </div><br/>
            <%= e.submit("Add Rating") %>
          </div>
        <% end %>
      </div>
		</div>
		<% end %>

    <!-- comments if any -->
    <% if @feedback.comments.any? %>
		<div class="post">
      <a class="anchor" name="comments"></a>
		  <div class="posthead">
        <h2>Comments</h2>
      </div>
      <div id="comments" class="comments-list">
        <% @feedback.comments.each do |c| %>
          <div class="entry">
             <p class="avt"><%= image_tag user_pic(c.user.alias) %></p>
             <p class="name"><%=c.user.full_name%></p>
             <p class="date"><%=c.updated_at%></p>
             <div class="con">
               <p><%=c.text%></p>
             </div>
          </div>
        <% end %>
      </div>
		</div>
		<% end %>
		
    <!-- post a comment -->
		<div class="post">
      <a class="anchor" name="post_comment"></a>
		  <div class="posthead">
        <h2>Post a Comment</h2>
      </div>
      <div class="form2 formstyle">
        <%= form_for(@comment, :as=>:comment, :url=> { :action=>"comment_create", :id=>@feedback.id, :anchor=>:post_comment }) do |c| %>
     		<%= render "shared/error_list", :item => @comment %>
        <div class="fieldsets">
          <%= c.hidden_field(:feedback_id) %>
          <div class="textfield fields">
			      <label>Comment*</label>
            <%= c.text_area(:text, :rows=>5) %>
          </div>    
          <%= c.submit("Add Comment") %>
        </div>
        <% end %>
      </div>
		</div>

	</div>
	<div id="sidebar">
	  <h1>Map</h1>
	  <%= google_static_map :lat=>@property.lat, :lng=>@property.lng %>
	  <div class="clear">&nbsp;</div>
      <%= render "shared/latest_properties", :properties => @latest_properties %>
			<%= render "shared/latest_feedbacks", :feedbacks => @latest_feedbacks %>
	</div>
	<div class="clear">	</div>
</div>

<script>
  $(function(){
    $('#upload_form').iframePostForm({
      complete:function(response){
        var obj = $.parseJSON(response);
        alert(obj.message);
        alert(obj);
      }
    });
  });
</script>

