<div id="maincontent">
	<div id="page">
		
		<div class="post">
		  <div class="posthead">
		      <p class="date"><%=@post.updated_at%></p>
  		    <h1><%=@post.title%></h1>
		      <p class="postmeta">By <%=@post.author%></p>
		  </div>
		  <div>
		    <%=@post.entry%>
		  </div>
      <%= render "shared/social_widgets" %>
		</div>
		<div>
		   <%if @post.hasprev?%>
	  	   <p style="float:left;"><%= link_to "<< Earlier posts", :id => @post.id-1%></p>
		   <%end%>
		   <%if @post.hasnext?%>
	  	   <p style="float:right;"><%= link_to "Later posts >>", :id => @post.id+1%></p>
		   <%end%>
		</div>
		
		<!-- comments if any -->
 		<%= render "shared/comments", :comments => @post.comments %>

    <!-- post a comment -->
 		<%= render "shared/post_comment", :commentable => @post %>

	</div>
	<div id="sidebar">
	  <%= render "shared/side_pane" %>
	</div>
	<div class="clear">	</div>
</div>

